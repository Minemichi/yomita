<%= form_tag :rakuten_search, method: :get do  %>
<%= label_tag :keyword, 'Keyword Search' %>
<%= text_field_tag 'keyword', params[:keyword] %>
<%= submit_tag "Search" %>
<% end %>

<!--　Upper Stage　-->
<section id="photos_1">
  <table>
    <tbody>
      <% if @items1.present? %>
      <% @items1.each do |item| %>

      <%= link_to image_tag(item["mediumImageUrls"][0]), "#{item.url}" %>

      <% end %>
      <% end %>
    </tbody>
  </table>
</section>

